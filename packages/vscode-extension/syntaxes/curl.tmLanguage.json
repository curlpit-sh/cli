{
  "name": "Curlpit HTTP",
  "scopeName": "source.curl",
  "fileTypes": [
    "curl"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#requestLine"
    },
    {
      "include": "#headers"
    },
    {
      "include": "#separators"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "match": "^[\\t ]*#.*$",
          "name": "comment.line.number-sign.curl"
        }
      ]
    },
    "requestLine": {
      "patterns": [
        {
          "name": "meta.request-line.curl",
          "match": "^(?i:(GET|POST|PUT|DELETE|PATCH|HEAD|OPTIONS|TRACE))\\s+([^\\s]+)",
          "captures": {
            "1": {
              "name": "keyword.control.http.method.curl"
            },
            "2": {
              "name": "string.unquoted.url.curl"
            }
          }
        }
      ]
    },
    "headers": {
      "patterns": [
        {
          "begin": "^(\\w[\\w-]*)\\s*(:)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.tag.header.curl"
            },
            "2": {
              "name": "punctuation.separator.key-value.curl"
            }
          },
          "end": "$",
          "name": "meta.header.curl",
          "patterns": [
            {
              "match": "\\s+",
              "name": "punctuation.whitespace.header.curl"
            },
            {
              "include": "#variables"
            },
            {
              "match": "[^\\s\\{\\}]+",
              "name": "string.unquoted.header.value.curl"
            }
          ]
        }
      ]
    },
    "separators": {
      "patterns": [
        {
          "match": "^#{3}.*$",
          "name": "punctuation.section.separator.curl"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.template.double-brace.curl",
          "begin": "\\{\\{",
          "end": "\\}\\}",
          "patterns": [
            {
              "match": "[A-Za-z0-9_.-]+",
              "name": "entity.name.variable.curl"
            }
          ]
        },
        {
          "name": "variable.other.template.single-brace.curl",
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            {
              "match": "[A-Za-z0-9_.-]+",
              "name": "entity.name.variable.curl"
            }
          ]
        }
      ]
    }
  }
}
