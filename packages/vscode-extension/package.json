{
  "name": "curlpit",
  "displayName": "Curlpit",
  "description": "Syntax highlighting for Curlpit .curl request files",
  "version": "0.0.0-dev",
  "publisher": "curlpit",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "curl",
        "aliases": [
          "Curlpit",
          "curlpit"
        ],
        "extensions": [
          ".curl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "curl",
        "scopeName": "source.curl",
        "path": "./syntaxes/curl.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "package": "vsce package --no-dependencies --out dist/curlpit-${npm_package_version}.vsix"
  },
  "devDependencies": {
    "vsce": "^2.15.0"
  }
}
