{
  "name": "curlpit",
  "version": "0.0.0-dev",
  "description": "Terminal-first HTTP runner for replaying scripted requests.",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/curlpit-sh/cli.git"
  },
  "bin": {
    "curlpit": "dist/run.js",
    "crlp": "dist/run.js"
  },
  "scripts": {
    "build": "rm -rf dist && bun build ./src/install.ts ./src/run.ts --outdir dist --target node --format esm",
    "postinstall": "node dist/install.js"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "vendor",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@curlpit/scripts": "workspace:*"
  },
  "keywords": [
    "curl",
    "http",
    "cli",
    "terminal",
    "rest",
    "api"
  ]
}
